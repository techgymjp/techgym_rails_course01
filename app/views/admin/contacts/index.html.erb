<h1><%= Contact.model_name.human %>管理</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= t Contact.human_attribute_name(:title) %></th>
      <th><%= t Contact.human_attribute_name(:name) %></th>
      <th><%= t Contact.human_attribute_name(:email) %></th>
      <th><%= t Contact.human_attribute_name(:content) %></th>
      <th><%= t Contact.human_attribute_name(:status) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>

        <td><%= contact.title_i18n %></td>



        <td><%= contact.name %></td>



        <td><%= contact.email %></td>



        <td><%= contact.content %></td>


        <td><%= contact.status_i18n %></td>

        <td>
          <% if contact.yet? %>
            <%= link_to '対応', change_status_admin_contact_path(contact), method: :post, class: 'btn btn-info' %>
          <% end %>
          <%= link_to '表示', [:admin, contact], class: "btn btn-secondary" %>
          <%= link_to '編集', edit_admin_contact_path(contact), class: "btn btn-primary" %>
          <%= link_to '削除', [:admin, contact], method: :delete, class: "btn btn-danger", data: { confirm: '本当によろしいですか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_admin_contact_path, class: "btn btn-success" %>
